<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>CineMan - Cinema Management System</display-name>
    <description>Cinema booking and management system</description>

    <!-- Welcome file list -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>login</welcome-file>
    </welcome-file-list>

    <!-- Session configuration (30 minutes) -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- MIME type mappings for static resources -->
    <mime-mapping>
        <extension>css</extension>
        <mime-type>text/css</mime-type>
    </mime-mapping>

    <mime-mapping>
        <extension>js</extension>
        <mime-type>application/javascript</mime-type>
    </mime-mapping>

    <mime-mapping>
        <extension>png</extension>
        <mime-type>image/png</mime-type>
    </mime-mapping>

    <mime-mapping>
        <extension>jpg</extension>
        <mime-type>image/jpeg</mime-type>
    </mime-mapping>

    <mime-mapping>
        <extension>jpeg</extension>
        <mime-type>image/jpeg</mime-type>
    </mime-mapping>

    <mime-mapping>
        <extension>gif</extension>
        <mime-type>image/gif</mime-type>
    </mime-mapping>

    <!-- Error pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/views/common/error-404.jsp</location>
    </error-page>

    <error-page>
        <error-code>500</error-code>
        <location>/views/common/error-500.jsp</location>
    </error-page>

    <!-- Encoding filter -->
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.cineman.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <servlet-name>LoginServlet</servlet-name>
    </filter-mapping>

    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <servlet-name>RegisterServlet</servlet-name>
    </filter-mapping>

    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <servlet-name>LogoutServlet</servlet-name>
    </filter-mapping>

    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <servlet-name>DashboardServlet</servlet-name>
    </filter-mapping>

    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <servlet-name>CustomerHomeServlet</servlet-name>
    </filter-mapping>

    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <servlet-name>StaffHomeServlet</servlet-name>
    </filter-mapping>

    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <servlet-name>MovieStatisticsServlet</servlet-name>
    </filter-mapping>

    <!-- Authentication filter -->
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.cineman.filter.AuthenticationFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
        <url-pattern>/staff/*</url-pattern>
        <url-pattern>/customer/*</url-pattern>
    </filter-mapping>

</web-app>
